{
  "name": "canvasbot",
  "version": "1.0.0",
  "description": "CanvasBot - AI assistant that helps students with Canvas LMS assignments, grades, submissions, and course management through natural language queries",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "query": "tsx src/query-simple.ts",
    "query-cli": "tsx src/query-cli.ts",
    "api-server": "tsx src/openai-api-server.ts",
    "api-server:prod": "node dist/openai-api-server.js",
    "canvasbot": "./manage.sh start",
    "canvasbot:chat": "./manage.sh up",
    "canvasbot:webui": "./manage.sh up",
    "canvasbot:full": "./manage.sh up",
    "canvasbot:stop": "./manage.sh down",
    "canvasbot:logs": "./manage.sh logs",
    "canvasbot:sync": "./manage.sh sync",
    "canvasbot:status": "./manage.sh status",
    "setup": "npm run build && ./manage.sh build",
    "setup:models": "./manage.sh setup:models",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:coverage": "jest --config jest.config.cjs --coverage"
  },
  "dependencies": {
    "@inquirer/prompts": "^3.0.0",
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "chromadb": "^1.7.3",
    "cors": "^2.8.5",
    "date-fns": "^3.0.0",
    "dotenv": "^16.3.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "inquirer": "^9.2.0",
    "jest": "^30.0.5",
    "morgan": "^1.10.1",
    "ollama": "^0.5.0",
    "zod": "^4.20.0",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/inquirer": "^9.0.0",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.4.2"
  },
  "keywords": [
    "canvasbot",
    "canvas",
    "lms",
    "ai",
    "rag",
    "llm",
    "oobabooga",
    "chat",
    "docker"
  ],
  "author": "",
  "license": "MIT"
}
