{
  "name": "canvasbot",
  "version": "1.0.0",
  "description": "CanvasBot - AI assistant for Canvas LMS with RAG and chat interface",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "query": "tsx src/query-simple.ts",
    "query-cli": "tsx src/query-cli.ts",
    "api-server": "tsx src/openai-api-server.ts",
    "api-server:prod": "node dist/openai-api-server.js",
    "canvasbot": "docker-compose up canvasbot vllm ollama",
    "canvasbot:chat": "docker-compose --profile chat up",
    "canvasbot:webui": "docker-compose --profile webui up",
    "canvasbot:full": "docker-compose --profile chat up",
    "canvasbot:stop": "docker-compose down",
    "canvasbot:logs": "docker-compose logs -f canvasbot",
    "canvasbot:sync": "docker-compose exec -T canvasbot curl -X POST --max-time 30 http://localhost:3001/canvas/sync",
    "canvasbot:status": "docker-compose exec -T canvasbot curl http://localhost:3001/canvas/status",
    "setup": "npm run build && docker-compose build",
    "setup:models": "docker-compose exec ollama ollama pull nomic-embed-text",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@inquirer/prompts": "^3.0.0",
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "chromadb": "^1.7.3",
    "cors": "^2.8.5",
    "date-fns": "^3.0.0",
    "dotenv": "^16.3.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "inquirer": "^9.2.0",
    "jest": "^30.0.5",
    "morgan": "^1.10.1",
    "ollama": "^0.5.0",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/inquirer": "^9.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "canvasbot",
    "canvas",
    "lms",
    "ai",
    "rag",
    "llm",
    "oobabooga",
    "chat",
    "docker"
  ],
  "author": "",
  "license": "MIT"
}
