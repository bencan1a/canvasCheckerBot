# Canvas Checker Bot Environment Configuration
# Copy this file to .env and modify values as needed

# Open WebUI Authentication Settings
# Set to false for development to disable authentication (only works on fresh installations)
# Set to true for production environments
WEBUI_AUTH=true

# Secret key for JWT tokens (change this for production)
WEBUI_SECRET_KEY=canvasbot-secret-key-change-this-in-production

# Allow new user registration
# Set to false to prevent new users from signing up
ENABLE_SIGNUP=true

# Default role for new users (admin, user, pending)
DEFAULT_USER_ROLE=user

# Development vs Production Mode Examples:
# For Development (no auth):
# WEBUI_AUTH=false
# ENABLE_SIGNUP=false
# DEFAULT_USER_ROLE=admin

# For Production (with auth):
# WEBUI_AUTH=true
# WEBUI_SECRET_KEY=your-secure-random-key-here
# ENABLE_SIGNUP=true
# DEFAULT_USER_ROLE=user